<h2 style="color: aqua;">Currently Reading</h2>

<div class="books-section">
  <% if @borrowed_books.present? %>
    <% @borrowed_books.each do |book| %>
      <div class="book-card">
        <%= image_tag book.image_url.present? ? book.image_url : 'default_book.jpg', alt: book.title, style: "width: 150px; height: auto;" %>
        <div class="book-info">
          <strong>Title:</strong> <%= book.title %><br>
          <strong>Author:</strong> <%= book.author %><br>
          <strong>ISBN:</strong> <%= book.isbn %><br>
          <strong>Due Date:</strong> <%= (book.borrowings.last&.borrowed_at || Time.now).to_date + 14.days %>
        </div>
        <a href="<%= book_path(book) %>" class="button">View Details</a>
      </div>
    <% end %>
  <% else %>
    <p>You haven't borrowed any books yet.</p>
  <% end %>
</div>

<div style="margin-top: 20px;">
  <%= link_to "Back to Books", dashboard_path, class: "btn btn-primary" %>
</div>
