<div class="h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center mb-6 text-gray-700">Sign In</h2>

    <%= form_with url: session_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.email_field :email, class: "w-full h-12 px-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-900 text-lg" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.password_field :password, class: "w-full h-12 px-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-900 text-lg" %>
      </div>

      <%= form.submit "Sign In", class: "w-full bg-blue-500 text-white py-3 rounded-md hover:bg-blue-600 text-lg font-semibold transition" %>
    <% end %>

    <p class="mt-6 text-center text-gray-600">
      Don't have an account? 
      <%= link_to "Create Account", signup_path, class: "text-blue-500 hover:underline font-semibold" %>
    </p>
  </div>
</div>
