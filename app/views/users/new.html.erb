<%= form_with model: @user, url: sign_up_path do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, required: true, placeholder: "Enter your name" %>
    </div>
  
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, required: true, placeholder: "Enter your email" %>
    </div>
  
    <div>
      <%= form.label :password %>
      <%= form.password_field :password, required: true, placeholder: "Enter your password" %>
    </div>
  
    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, required: true, placeholder: "Confirm your password" %>
    </div>
  
    <div>
      <%= form.submit "Create Account" %>
    </div>
  <% end %>