<div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4" style="color: #4A90E2;">Edit Profile</h1>

  <% if @user.errors.any? %>
    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
      <h2 class="font-semibold">Please fix the following errors:</h2>
      <ul class="list-disc list-inside">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :name, style: "color: #E94E77;" %>
      <%= f.text_field :name, required: true, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :email_address, style: "color: #34A853;" %>
      <%= f.email_field :email_address, required: true, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, style: "color: #FFAA00;" %>
      <%= f.password_field :password, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
      <p class="text-sm text-gray-500">Leave blank if you donâ€™t want to change your password.</p>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, style: "color: #FF5733;" %>
      <%= f.password_field :password_confirmation, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Update Profile", class: "w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4 flex justify-between">
    <%= link_to "Back to Dashboard", root_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
    <%= link_to "Cancel", user_profile_path, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
  </div>
</div>
