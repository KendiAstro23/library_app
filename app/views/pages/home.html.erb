  <div class="max-w-2xl mx-auto bg-white/80 backdrop-blur-sm p-8 rounded-lg shadow-xl">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to the Library App</h1>
    <p class="text-xl text-gray-700 mb-8">Your digital gateway to a world of books and knowledge.</p>

    <div class="space-y-4">
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "Sign In", new_session_path, 
            class: "inline-block px-8 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300" %>
        <%= link_to "Sign Up", new_user_path, 
            class: "inline-block px-8 py-3 text-lg font-semibold text-white bg-green-600 rounded-lg hover:bg-green-700 transition duration-300" %>
