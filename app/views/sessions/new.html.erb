<div class="form-container">
  <h1>Sign In</h1>

  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <%= form_with url: login_path do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address" %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password" %>
    </div>

    <div>
      <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %>

  <p>Don't have an account? <%= link_to "Create Account", new_user_path %></p>
</div>