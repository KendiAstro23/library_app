<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, placeholder: "Enter your email" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, placeholder: "Enter your password" %>
  </div>

  <div>
    <%= form.submit "Sign In" %>
  </div>
<% end %>